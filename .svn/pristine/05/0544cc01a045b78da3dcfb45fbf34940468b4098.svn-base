.mail-container {
    display: flex;
    height: 100vh;
    font-family: 'Segoe UI', sans-serif;
}

/* 사이드바 */
.mailSidebar {
    width: 220px;
    background-color: #ffffff; /* 흰색으로 변경 */
    color: #333; /* 텍스트 어두운 회색 */
    padding: 25px 20px;
    display: flex;
    flex-direction: column;
    border-right: 1px solid #ddd; /* 구분선 추가 */
}

.mailSidebar h3 {
    font-size: 18px;
    margin-bottom: 20px;
    color: #2c3e50; /* 진한 남색 계열로 강조 */
}

.mailSidebar .btn {
    margin-bottom: 20px;
    padding: 10px;
    background-color: #3498db; /* 메일 쓰기 버튼: 파란색 */
    border: none;
    color: white;
    border-radius: 8px;
    font-weight: bold;
    cursor: pointer;
}

.mailSidebar .btn:hover {
    background-color: #2980b9;
}

.menu-item {
    margin-bottom: 12px;
    padding: 10px 12px;
    display: block;
    text-decoration: none;
    color: #2c3e50;
    border-radius: 6px;
    transition: background-color 0.3s ease;
    font-size: 14px;
}

.menu-item:hover {
    background-color: #f0f0f0;
}


/* 메일 리스트 영역 */
.content-area {
    flex: 1;
    padding: 30px;
    background-color: #f9f9f9;
    overflow-y: auto;
}

.no-mail {
    font-size: 18px;
    color: #888;
    text-align: center;
    margin-top: 100px;
}

.table {
    width: 100%;
    background-color: white;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}

.table th, .table td {
    padding: 14px 16px;
    font-size: 14px;
    text-align: left;
    border-bottom: 1px solid #eee;
}

.table thead {
    background-color: #3498db;
    color: white;
}

.mail-subject a {
    color: #2c3e50;
    text-decoration: none;
}

.mail-subject a:hover {
    text-decoration: underline;
    color: #2980b9;
}

.favorite-icon {
    color: #f1c40f;
}

/* 메일 쓰기 폼 css */

.compose-mail-wrapper {
    width: 100%;
}

.compose-mail-form {
    width: 100%;
}

.compose-mail-form label {
    display: block;
    font-weight: bold;
    margin-bottom: 8px;
    color: #333;
}

.compose-mail-form input[type="text"],
.compose-mail-form input[type="email"],
.compose-mail-form textarea {
    width: 100%;
    padding: 12px;
    margin-bottom: 20px;
    border: 1px solid #ccc;
    border-radius: 8px;
    background-color: #f8f8f8;
    font-size: 14px;
}

.compose-mail-form button {
    background-color: #3498db;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 6px;
    font-weight: bold;
    cursor: pointer;
}

.compose-mail-form button:hover {
    background-color: #2980b9;
}
