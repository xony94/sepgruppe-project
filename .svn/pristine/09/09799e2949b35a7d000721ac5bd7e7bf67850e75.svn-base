@charset "UTF-8";

.btn {
    background: none;
    border: none;
    color: inherit;
    font-size: 1rem;
    cursor: pointer;
    padding: 5px 10px;
}
.btn:hover {
    text-decoration: underline;
}

.tree-container {
    width: 100%;
    height: 600px; /* 높이 고정 */
border: 1px solid #ccc; /* 테두리 추가 */
padding: 10px;
overflow: hidden; /* 부모 요소에서는 스크롤 안 생기게 */
}

#tree {
    width: 100%;
    height: 100%; /* 부모 높이를 따라감 */
overflow: auto; /* 내용이 많아지면 스크롤 생성 */
}

#templateDetails{
	border: double gray 2px !important;
	background: white;
	width: 100%;
    height: 650px; /* 부모 높이를 따라감 */
overflow: auto; /* 내용이 많아지면 스크롤 생성 */
}

#apprLineDiv{
	background:white;
	width: 100%;
    height: 100%; /* 부모 높이를 따라감 */
overflow: auto; /* 내용이 많아지면 스크롤 생성 */
 }
 
#depDropArea { 
 	width: 300px;
   	height: 100px;
   	border: 2px dashed #aaa;
   	text-align: center;
   	ine-height: 100px;
   	margin-top: 20px;
   	background-color: #f9f9f9;
 } 
 
 #aprvlLineDiv {
    display: flex;
    gap: 20px; /* 테이블 사이 간격 */
justify-content: flex-end; /* 오른쪽 정렬 */
}

#aprvlLineDiv table {
    border-collapse: collapse;
    border: 1px solid black;
}

/* 신청/승인 칸 (첫 번째 열) */
#aprvlLineDiv th:first-child {
    width: 40px;
    background-color:#e0e0e0; /* 연한 회색 */
}

/* 나머지 셀 공통 스타일 */
#aprvlLineDiv th, 
#aprvlLineDiv td {
    border: 1px solid black;
    padding: 8px;
    text-align: center;
    width: 100px;
}
 
