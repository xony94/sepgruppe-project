@Controller
@RequestMapping("{companyNo}/webhard")
public class WebhardController {
	
	@Autowired
	private WebhardService webhardService;
	
	// 웹하드 저장된 파일 목록 조회
	 @GetMapping("")
	 public String selectListAllWebhard() {
		 return "gw:webhard/webhardList";
	 }
	 
	 @PostMapping("/upload")
    public ResponseEntity<String> uploadFile(@RequestParam("file") MultipartFile file) {
        try {
            String fileId = webhardService.uploadFile(file);
            return ResponseEntity.ok("File uploaded successfully. File ID: " + fileId);
        } catch (Exception e) {
            return ResponseEntity.badRequest().body("Failed to upload file: " + e.getMessage());
        }
    }
	 
}
