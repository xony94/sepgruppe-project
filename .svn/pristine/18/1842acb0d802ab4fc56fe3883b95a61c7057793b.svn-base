<!--
 * == 개정이력(Modification Information) ==
 *
 *   수정일               수정자           수정내용
 *  ============      ============== =======================
 *  2025. 3. 14.        JYS            회의실 예약 전체 조회 페이지 생성
 *
-->
<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt" %>
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>회의실 예약 현황</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            max-width: 1000px;
            margin: 0 auto;
        }
        h2 {
            margin-top: 20px;
            margin-bottom: 20px;
            text-align: center;
        }
        .date-navigation {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
        }
        .date-navigation a {
            margin: 0 10px;
            font-size: 20px;
            font-weight: bold;
            text-decoration: none;
            color: #007bff;
        }
        .date-navigation a:hover {
            text-decoration: underline;
        }
        #currentDateDisplay {
            cursor: pointer;
            font-size: 20px;
            font-weight: bold;
            text-align: center;
        }
        #datePicker {
            display: none; /* 기본적으로 숨김 */
            position: absolute;
            z-index: 100; /* 다른 요소 위에 표시 */
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>회의실 예약 현황</h2>

        <!-- 날짜 내비게이션 -->
	    <div class="date-navigation">
	        <!-- 이전 날짜 -->
	        <a href="<c:url value='/${companyNo}/reservation/reservations/${prevDate}/grouped'/>">&lt;</a>
	
	        <!-- 현재 날짜와 요일 -->
	        <span id="currentDateDisplay" style="cursor: pointer;">
	            ${selectedDate} (<fmt:formatDate value="${selectedDateAsDate}" pattern="E"/>)
	        </span>
	
	        <!-- 달력 -->
	        <input type="date" id="datePicker" value="${selectedDate}" style="display: inline;" />
	
	        <!-- 다음 날짜 -->
	        <a href="<c:url value='/${companyNo}/reservation/reservations/${nextDate}/grouped'/>">&gt;</a>
	    </div>

        <!-- 예약 현황 테이블 -->
        <table class="table table-bordered schedule-table">
            <thead>
                <tr>
                    <th>회의실</th>
                    <th>09:00</th>
                    <th>10:00</th>
                    <th>11:00</th>
                    <th>12:00</th>
                    <th>13:00</th>
                    <th>14:00</th>
                    <th>15:00</th>
                    <th>16:00</th>
                    <th>17:00</th>
                    <th>18:00</th>
                    <th>19:00</th>
                    <th>20:00</th>
                    <th>21:00</th>
                </tr>
            </thead>
            <tbody>
            
              <c:forEach var="room" items="${allRooms}">
    <tr>
        <td>${room.roomNm}</td> <!-- 회의실 이름 -->
        <c:forEach var="time" begin="9" end="21"> <!-- 시간대 반복 -->
            <td>
                <c:set var="timeKey" value="${time}:00" />
                <c:choose>
                    <c:when test="${schedule[room.roomNo][timeKey] != null}">
                        <span class="reserved" 
                              onclick="location.href='<c:url value='/${companyNo}/reservation/reservations/${schedule[room.roomNo][timeKey].reservationNo}'/>'">
                            예약자: ${schedule[room.roomNo][timeKey].empId}
                        </span>
                    </c:when>
                    <c:otherwise>
                        <span class="empty" onclick="openReservationModal('${room.roomNo}', '${timeKey}', '${selectedDate}')">
                            예약 가능
                        </span>
                    </c:otherwise>
                </c:choose>
            </td>
        </c:forEach>
    </tr>
</c:forEach>

               
            </tbody>
        </table>

        <div class="text-center">
            <a href="javascript:history.back()" class="btn btn-secondary">뒤로 가기</a>
        </div>
        </div>
    
    <div id="dataContainer" data-company-no="${companyNo}"></div>
    
    <!-- 모달 창 구조 -->
    <div class="modal fade" id="reservationModal" tabindex="-1" aria-labelledby="reservationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reservationModalLabel">예약 등록</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- 여기서 예약 등록 폼이 로드됩니다 -->
                <div id="reservationFormContent">
                    <!-- 로딩 중 메시지 -->
                    <p>폼을 불러오는 중입니다...</p>
                </div>
            </div>
        </div>
    </div>
</div>
    
    <script>
    // 날짜 클릭 시 달력 표시
    document.getElementById("currentDateDisplay").addEventListener("click", function () {
        const datePicker = document.getElementById("datePicker");
        datePicker.style.display = "inline"; // 보이게 설정
        datePicker.focus(); // 포커스 이동
    });

    // 날짜 선택 시 페이지 이동
    document.getElementById("datePicker").addEventListener("change", function () {
        const selectedDate = this.value; // 사용자가 선택한 날짜
        const companyNo = document.getElementById("dataContainer").getAttribute("data-company-no"); // 회사 번호

        if (!selectedDate) {
            alert("날짜를 선택해주세요.");
            return;
        }

        // URL에 '/sep/'를 포함하여 이동
        const url = `/sep/${companyNo}/reservation/reservations/${selectedDate}/grouped`;
        console.log("이동할 URL:", url); // 디버깅용 로그
        window.location.href = url; // 해당 URL로 이동
    });

    // 포커스 해제 시 달력 숨기기
    document.getElementById("datePicker").addEventListener("blur", function () {
        this.style.display = "none"; // 다시 숨김
    });

    // 예약 상세 조회 이동
    function goToReservationDetail(reservationNo) {
        const companyNo = document.getElementById("dataContainer").getAttribute("data-company-no"); // 회사 번호
        const url = `/sep/${companyNo}/reservation/reservations/${reservationNo}`; // '/sep/' 추가
        window.location.href = url;
    }

 // 예약 등록 모달 열기
    function openReservationModal(roomNo, timeKey, selectedDate) {
        console.log("openReservationModal 호출됨");
        console.log("roomNo:", roomNo);
        console.log("timeKey:", timeKey);
        console.log("selectedDate:", selectedDate);

        const companyNo = document.getElementById("dataContainer").getAttribute("data-company-no");
        console.log("companyNo:", companyNo);

        // roomNo 값이 없는 경우 에러 처리
        if (!roomNo || !timeKey || !selectedDate || !companyNo) {
            console.error("필수 데이터가 누락되었습니다.");
            alert("예약 정보를 불러오는 데 실패했습니다. 다시 시도해주세요.");
            return;
        }

        const url = `/sep/${companyNo}/reservation/reservations/new?roomNo=${roomNo}&time=${timeKey}&date=${selectedDate}`;
        console.log("생성된 URL:", url);

        // AJAX로 예약 폼 가져오기
        fetch(url)
            .then(response => {
                if (!response.ok) {
                    throw new Error(`네트워크 응답에 문제가 있습니다. 상태 코드: ${response.status}`);
                }
                return response.text(); // HTML 텍스트로 변환
            })
            .then(html => {
                // 모달의 내용을 업데이트
                document.getElementById("reservationFormContent").innerHTML = html;

                // 모달 창 열기
                const reservationModal = new bootstrap.Modal(document.getElementById("reservationModal"));
                reservationModal.show();
            })
            .catch(error => {
                console.error("예약 폼 로드 중 에러 발생:", error);
                document.getElementById("reservationFormContent").innerHTML = `<p>폼을 불러오는 데 실패했습니다.</p>`;
            });
    }
</script>
</body>
</html>
















