<!--
 * == 개정이력(Modification Information) ==
 *
 *   수정일               수정자           수정내용
 *  ============      ============== =======================
 *  2025. 3. 14.        JYS            회의실 예약 전체 조회 페이지 생성
 *  2025. 4.  2.     	SJH            수정 중
 *
-->
<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/functions" prefix="fn" %>
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>예약 현황</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        body { background-color: #f8f9fa; }
        .container { max-width: 1200px; margin: 0 auto; }
        h2, h4 { text-align: center; }
        .table th, .table td { text-align: center; }
        .time-slot { background-color: white; min-height: 50px; text-align: center; vertical-align: middle; }
        .reserved { background-color: #007bff; color: white; padding: 5px; border-radius: 5px; }
        .reserved a { color: white !important; text-decoration: none; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
        /* 수정된 부분: 회의실 정보 스타일 */
        .room-info {
            text-align: left;
            padding: 5px 10px;
            font-size: 14px;
        }
        .room-info .room-name {
            font-weight: bold;
            color: #343a40;
        }
        .room-info .room-details {
            font-size: 12px;
            color: #666;
            margin-top: 4px;
        }
        .room-info .room-details span {
            display: block;
            margin-top: 2px;
        }
    </style>
</head>
<body>
<div class="container">
    <h2>회의실 예약 현황</h2>
    <h4>
        <a href="javascript:void(0);" onclick="changeDate(-1)">이전</a>
        ${currentDate}
        <a href="javascript:void(0);" onclick="changeDate(1)">다음</a>
    </h4>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>회의실</th>
            <c:forEach var="hour" begin="9" end="21">
                <th>${hour}:00</th>
            </c:forEach>
        </tr>
        </thead>
        <tbody>
        <c:forEach var="room" items="${allRooms}">
            <tr>
                <td>${room.roomNm}</td>
                <c:forEach var="hour" begin="9" end="21">
                    <c:set var="timeKey" value="${hour}:00" />
                    <c:choose>
                        <c:when test="${not empty schedule[room.roomNo][timeKey]}">
                            <td class="time-slot reserved">
                                <a href="${pageContext.request.contextPath}/${companyNo}/reservation/${schedule[room.roomNo][timeKey].reservationNo}">
                                    ${schedule[room.roomNo][timeKey].empNm}
                                    ${fn:substring(schedule[room.roomNo][timeKey].reservationStartTime.toString(), 11, 16)} ~
                                    ${fn:substring(schedule[room.roomNo][timeKey].reservationEndTime.toString(), 11, 16)}
                                </a>
                            </td>
                        </c:when>
                        <c:otherwise>
                            <td class="time-slot"
                                style="cursor: pointer;"
                                data-companyno="${companyNo}"
                                data-roomno="${room.roomNo}"
                                data-hour="${hour}">
                                &nbsp;
                            </td>
                        </c:otherwise>
                    </c:choose>
                </c:forEach>
            </tr>
        </c:forEach>
        </tbody>
    </table>

    <h2>내 예약 현황</h2>
    <c:choose>
        <c:when test="${not empty myReservations}">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>회의실</th>
                    <th>예약 날짜</th>
                    <th>시작 시간</th>
                    <th>종료 시간</th>
                    <th>내용</th>
                    <th>취소</th>
                </tr>
                </thead>
                <tbody>
                <c:forEach var="reservation" items="${myReservations}">
                    <tr>
                        <td>
                            <a href="${pageContext.request.contextPath}/${companyNo}/reservation/${reservation.reservationNo}">
                                ${reservation.roomName}
                            </a>
                        </td>
                        <td><fmt:formatDate value="${reservation.reservationDate}" pattern="yyyy-MM-dd"/></td>
                        <td><fmt:formatDate value="${reservation.reservationStartTime}" pattern="HH:mm"/></td>
                        <td><fmt:formatDate value="${reservation.reservationEndTime}" pattern="HH:mm"/></td>
                        <td>${reservation.reservationContent}</td>
                        <td>
                            <button class="btn btn-danger btn-sm" data-toggle="modal" data-target="#cancelModal${reservation.reservationNo}">취소</button>
                            <!-- 취소 모달 -->
                            <div class="modal fade" id="cancelModal${reservation.reservationNo}" tabindex="-1" role="dialog">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">예약 취소 확인</h5>
                                            <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                                        </div>
                                        <div class="modal-body">예약을 취소하시겠습니까?</div>
                                        <div class="modal-footer">
                                            <form action="${pageContext.request.contextPath}/${companyNo}/reservation/${reservation.reservationNo}/delete" method="post">
                                                <input type="hidden" name="_method" value="delete"/>
                                                <button type="submit" class="btn btn-danger">확인</button>
                                            </form>
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">취소</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                </c:forEach>
                </tbody>
            </table>
        </c:when>
        <c:otherwise>
            <p class="text-center">예약 내역이 없습니다.</p>
        </c:otherwise>
    </c:choose>
</div>

<!-- 예약 등록 모달 -->
<div class="modal fade" id="reservationModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">예약 등록</h5>
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
            </div>
            <div class="modal-body" id="modalBody">
                <!-- 여기에 폼 내용이 동적으로 삽입됨 -->
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

<script>
    const currentDate = "${currentDate}";

    function changeDate(offset) {
        const date = new Date(currentDate);
        date.setDate(date.getDate() + offset);
        const formattedDate = date.toISOString().split('T')[0];
        window.location.href = "${pageContext.request.contextPath}/${companyNo}/reservation?date=" + formattedDate;
    }

    function openReservationModal(companyNo, roomNo, hour) {
        if (!roomNo || !hour) {
            alert("회의실 번호 또는 시간이 유효하지 않습니다.");
            return;
        }

        const timeFormatted = (hour < 10 ? "0" : "") + hour + ":00";

        fetch(`${pageContext.request.contextPath}/${companyNo}/reservation/new?roomNo=${roomNo}&time=${timeFormatted}&date=${currentDate}`)
            .then(response => response.text())
            .then(data => {
                document.getElementById("modalBody").innerHTML = data;
                $('#reservationModal').modal('show');
            })
            .catch(error => console.error('Error:', error));
    }

    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".time-slot").forEach(slot => {
            slot.addEventListener("click", function () {
                const companyNo = this.dataset.companyno;
                const roomNo = this.dataset.roomno;
                const hour = this.dataset.hour;
	
                console.log("✅ companyNo:", companyNo, "roomNo:", roomNo, "hour:", hour);
	
                openReservationModal(companyNo, roomNo, hour);
            });
        });
    });
</script>
</body>
</html>
