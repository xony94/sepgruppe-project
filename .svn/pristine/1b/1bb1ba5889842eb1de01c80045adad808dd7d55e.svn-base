<!-- 
 * == 개정이력(Modification Information) ==
 *   
 *   수정일      			수정자           수정내용
 *  ============   	============== =======================
 *  2025. 3. 21.     	손현진            최초 생성
 *
-->
<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>

<section class="section-padding">

	<div class="row mb-3">
		<label for="requestNo" class="col-sm-2 col-form-label">신청 번호</label>
		<div class="col-sm-10">
			<input type="number" class="form-control" name="requestNo"
				id="requestNo" value="${subscription_requests.requestNo}">
			<form:errors path="requestNo" class="text-danger" element="span" />
		</div>
	</div>
	<div class="row mb-3">
		<label for="planNo" class="col-sm-2 col-form-label">구독 플랜 번호</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" name="planNo" id="planNo"
				value="${subscription_requests.planNo}">
			<form:errors path="planNo" class="text-danger" element="span" />
		</div>
	</div>
	<div class="row mb-3">
		<label for="contactId" class="col-sm-2 col-form-label">고객사 아이디</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" name="contactId"
				id="contactId" value="${subscription_requests.contactId}">
			<form:errors path="contactId" class="text-danger" element="span" />
		</div>
	</div>
	<div class="row mb-3">
		<label for="requestDate" class="col-sm-2 col-form-label">신청 날짜</label>
		<div class="col-sm-10">
			<input type="date" class="form-control" name="requestDate"
				id="requestDate" value="${subscription_requests.requestDate}">
			<form:errors path="requestDate" class="text-danger" element="span" />
		</div>
	</div>
	<div class="row mb-3">
		<label for="requestPeriod" class="col-sm-2 col-form-label">신청
			구독 기간</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" name="requestPeriod"
				id="requestPeriod" value="${subscription_requests.requestPeriod}">
			<form:errors path="requestPeriod" class="text-danger" element="span" />
		</div>
	</div>
	<div class="row mb-3">
		<label for="requestPersonCount" class="col-sm-2 col-form-label">신청
			인원 수</label>
		<div class="col-sm-10">
			<input type="number" class="form-control" name="requestPersonCount"
				id="requestPersonCount"
				value="${subscription_requests.requestPersonCount}">
			<form:errors path="requestPersonCount" class="text-danger"
				element="span" />
		</div>
	</div>
	<div class="row mb-3">
		<label for="paymentMethod" class="col-sm-2 col-form-label">결제
			방식</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" name="paymentMethod"
				id="paymentMethod" value="${subscription_requests.paymentMethod}">
			<form:errors path="paymentMethod" class="text-danger" element="span" />
		</div>
	</div>
	<div class="row mb-3">
		<label for="requestsStatus" class="col-sm-2 col-form-label">신청
			상태(승인/거절 등)</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" name="requestsStatus"
				id="requestsStatus" value="${subscription_requests.requestsStatus}">
			<form:errors path="requestsStatus" class="text-danger" element="span" />
		</div>
	</div>
</section>