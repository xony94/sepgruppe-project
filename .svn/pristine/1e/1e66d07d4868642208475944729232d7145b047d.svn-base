@charset "UTF-8";
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
.biggestContainer {
    display: flex;
    flex-direction: column; /* 세로 정렬 */
}

.fc-daygrid-day:hover {
    background-color: #f0f8ff; /* 연한 파란색 배경 */
    cursor: pointer;
}

#calendar {
    background: white;
    color: #333;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.fc-event {
    background-color: #007bff !important;
    color: white;
    border-radius: 5px;
}