/** 
 * <pre>
 * << 개정이력(Modification Information) >>
 *   
 *   수정일      			수정자           수정내용
 *  -----------   	-------------    ---------------------------
 *  2025. 3. 14.     	KMJ            최초 생성
 *
 * </pre>
 */
@charset "UTF-8";

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

.mydclzContainer {
	padding: 40px;
}

.biggestContainer {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  gap: 20px;
  width: 100%;
  padding: 20px;
}

/* 왼쪽: 출퇴근 버튼 */
.dclz-container {
  flex: 0 0 280px;
}

.dclz-right-wrap {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.dclz {
    background-color: white;
    border-radius: 8px;
    padding: 20px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
}

.dclz-date {
    font-size: 16px;
    color: #333;
    margin-bottom: 10px;
}

.dclz-clock {
    font-size: 32px;
    font-weight: bold;
    color: #000;
    margin-bottom: 20px;
}

.dclz-status {
    margin-bottom: 20px;
}

.info-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 8px;
    font-size: 15px;
}

.info-label {
    color: #444;
}

.info-value {
    font-weight: bold;
    color: #000;
}

.dclz-buttons-wrap {
  display: flex;
  flex-direction: column;
  align-items: center; /* ✅ 버튼 그룹 가운데 정렬 */
  gap: 15px;
}

.dclz-buttons {
  display: flex;
  gap: 12px;
  justify-content: center;
  
}

.dclz-buttons .btn {
  border-radius: 999px !important;
  min-width: 100px;
}

.status-btn {
  width: 90%; /* 길쭉하게 */
  max-width: 260px;
  padding: 10px 20px;
  border-radius: 20px;
}

button.btn:disabled {
  border-color: #ccc !important;
  color: #888 !important;
  cursor: not-allowed;
  box-shadow: none;
}

.dclz-summary-panel {
    width:100%;
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-left: 20px;
    margin-top: 10px;
}

.summary-box {
    display: flex;
    justify-content: space-between;
    background: #fff;
    border: 1px solid #eee;
    border-radius: 8px;
    padding: 20px 30px;
    gap: 20px;
}

.summary-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
}

.summary-label {
    font-size: 14px;
    color: #888;
    margin-bottom: 8px;
}

.summary-value {
    font-size: 18px;
    font-weight: bold;
    color: #007bff;
}

.text-muted {
    color: #999;
}

.dclz-right-panel {
    width: 100%;
    margin-top: 10px;
    padding: 0 20px;
}

.accordion .accordion-button {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.text-end {
    margin-left: left;
    color: #666;
}
