.tabs {
    display: flex;
    border-bottom: 1px solid #7f8c8d;
    margin-bottom: 15px;
}

.tab {
    background: none;
    border: none;
    color: #ecf0f1;
    padding: 10px 20px;
    cursor: pointer;
    font-size: 16px;
    transition: color 0.3s ease;
}

.tab:hover {
    color: #38b6ff;
}

.tab.active {
    color: #38b6ff;
    border-bottom: 2px solid #38b6ff;
}

