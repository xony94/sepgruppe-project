@charset "UTF-8";
.scrollable-list {
    max-height: 300px; /* 최대 높이 지정 */
    overflow-y: auto;  /* 세로 스크롤 활성화 */
    overflow-x: hidden; /* 가로 스크롤 숨김 */
}

#newApprDocBtn{
	height: 50px;
    line-height: 50px;
    padding: 0 20px;
    font-size: 1.1rem;
    display: inline-flex;
    align-items: center;
    justify-content: center; 
}

.btn {
    background: none;
    border: none;
    color: inherit;
    font-size: 1rem;
    cursor: pointer;
    padding: 5px 10px;
}

.btn:hover {
    text-decoration: underline;
}

table {
  text-align: center;         /* 텍스트 수평 정렬 */
  vertical-align: middle;     /* 텍스트 수직 정렬 (기본값은 baseline임) */
}
th, td {
  vertical-align: middle;     /* 각 셀에 명시해주는 게 더 안전함 */
}

.table-group-divider{
	cursor : pointer;
}