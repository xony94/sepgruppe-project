<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>    
<%@ taglib uri="http://www.springframework.org/security/tags" prefix="security" %>  
<security:authentication property="principal.realUser" var="realUser"/> <!-- Provider 시큐리티 정보 -->
<title>${realUser.companyNo } - 메인페이지</title>

<div class="col-md-4">
  <div class="card card-profile">
    <div
      class="card-header"
      style="background-image: url('${pageContext.request.contextPath }/resources/groupware/kaiadmin/assets/img/blogpost.jpg')"
    >
      <div class="profile-picture">
        <div class="avatar avatar-xl">
          <img
            src="${pageContext.request.contextPath }/resources/groupware/kaiadmin/assets/img/profile.jpg"
            alt="..."
            class="avatar-img rounded-circle"
          />
        </div>
      </div>
    </div>
    <div class="card-body">
      <div class="user-profile text-center">
        <div class="name" data-emp-id="${realUser.empId}">${realUser.empNm}</div>
        <div class="job">Frontend Developer</div>
        <div class="desc">A man who hates loneliness</div>
        <div class="social-media">
          <a
            class="btn btn-info btn-twitter btn-sm btn-link"
            href="#"
          >
            <span class="btn-label just-icon"
              ><i class="icon-social-twitter"></i>
            </span>
          </a>
          <a
            class="btn btn-primary btn-sm btn-link"
            rel="publisher"
            href="#"
          >
            <span class="btn-label just-icon"
              ><i class="icon-social-facebook"></i>
            </span>
          </a>
          <a
            class="btn btn-danger btn-sm btn-link"
            rel="publisher"
            href="#"
          >
            <span class="btn-label just-icon"
              ><i class="icon-social-instagram"></i>
            </span>
          </a>
        </div>
        <div class="view-profile">
          <a href="#" class="btn btn-secondary w-100"
            >View Full Profile</a
          >
        </div>
      </div>
    </div>
    <div class="card-footer">
      <div class="row user-stats text-center">
        <div class="col">
          <div class="number">125</div>
          <div class="title">Post</div>
        </div>
        <div class="col">
          <div class="number">25K</div>
          <div class="title">Followers</div>
        </div>
        <div class="col">
          <div class="number">134</div>
          <div class="title">Following</div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="col-md-4">
  <div class="card card-post card-round">
    <div class="card-body">
      <div class="d-flex">
        <div class="avatar">
          <img
            src="${pageContext.request.contextPath }/resources/groupware/kaiadmin/assets/img/profile.jpg"
            alt="..."
            class="avatar-img rounded-circle"
          />
        </div>
        <div class="info-post ms-2">
          <p class="username" data-emp-id="${realUser.empId}">${realUser.empNm}</p>
          <p class="date text-muted">20 Jan 18</p>
        </div>
      </div>
      <div class="separator-solid"></div>
      <h3 class="card-title">
        <a href="#"> 오늘의 일정 </a>
      </h3>
      <p class="card-text">
        일정 불러오기
      </p>
      <a href="<c:url value='/${companyNo}/schedule'/>" class="btn btn-primary btn-rounded btn-sm"
        >일정 더보기</a
      >
    </div>
  </div>
</div>


<script src="${pageContext.request.contextPath }/resources/groupware/js/indexGW.js"></script>
<script src="${pageContext.request.contextPath }/resources/groupware/js/alarm/alarm.js"></script>
<script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js'></script>
<script src="https://cdn.jsdelivr.net/npm/@fullcalendar/interaction@6.1.15/index.global.min.js"></script>