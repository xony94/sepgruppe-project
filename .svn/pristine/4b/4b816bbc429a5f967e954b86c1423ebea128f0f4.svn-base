@charset "UTF-8";
    .mail-container {
        display: flex;
        font-family: 'Segoe UI', sans-serif;
    }

    .mailSidebar {
        width: 200px;
        padding: 20px;
        background-color: #f7f7f7;
        border-right: 1px solid #ddd;
    }

    .mailSidebar h3 {
        margin-bottom: 15px;
        font-size: 16px;
        color: #333;
    }

    .menu-item {
        margin-bottom: 10px;
        padding: 10px;
        display: block;
        text-decoration: none;
        color: #333;
        border-radius: 5px;
        transition: background-color 0.2s;
    }

    .menu-item:hover {
        background-color: #e0e0e0;
    }

