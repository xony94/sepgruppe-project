@charset "UTF-8";

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
.biggestContainer {
    display: flex; 
    flex-direction: row;
    min-height: 100vh;
    justify-content: space-between;
    align-items: flex-start; /* 위쪽 정렬 */
    width: 100%;
    padding: 20px;
}
.top-nav {
    display: flex;
    justify-content: center;
    align-items: center;
    background: #4B5651;
    padding: 10px 20px;
    border-radius: 40px;
    width: 90%;
    max-width: 1200px;
    margin: 20px auto; /* 중앙 정렬 */
}

/* 네비게이션 내부 정렬 */
.nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
}

/* 왼쪽 메뉴 */
.nav-menu {
    display: flex;
    list-style: none;
    gap: 20px;
    padding: 0;
    margin: 0;
}

.nav-menu li a {
    color: white;
    text-decoration: none;
    font-weight: bold;
}

/* 우측 영역 스타일 */
.nav-right {
    display: flex;
    align-items: center;
    gap: 15px;
}

.lang-btn {
    background: rgba(255, 255, 255, 0.2);
    border: none;
    padding: 8px 15px;
    border-radius: 20px;
    color: white;
    font-weight: bold;
    cursor: pointer;
}

/* 우측 메뉴 */
.nav-links {
    display: flex;
    list-style: none;
    gap: 15px;
    padding: 0;
    margin: 0;
}

.nav-links li a {
    color: white;
    text-decoration: none;
}

/* 기부 버튼 */
.donate-btn {
    background: rgba(255, 255, 255, 0.2);
    border: none;
    padding: 8px 15px;
    border-radius: 20px;
    color: white;
    font-weight: bold;
    cursor: pointer;
}

/* 구분선 */
.divider {
    height: 20px;
    width: 2px;
    background: rgba(255, 255, 255, 0.4);
}


.dclz-container {
    flex: 1;
    max-width: 20%;
}

/* 왼쪽 근태관리 */
.dclz {
    background-color: white;
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 400px; 
    margin: 0 auto;
}

.work-status-change {
	margin-top: 15px;
	text-align: center;
}

.content {
    flex: 2;
    max-width: 80%;
    margin-left: 20px;
}


button.btn:disabled {
	background-color: white !important;
	color: #999999 !important;
	cursor: not-allowed !important;
	border: 1px solid #999999 !important;
}

.totalTime {
	text-align: right;
	font-weight: bold;
}