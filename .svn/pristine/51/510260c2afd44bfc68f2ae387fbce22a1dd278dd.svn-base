<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt" %>

<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>${projectDetail.projectTitle} - 프로젝트 상세</title>
    <link href="${pageContext.request.contextPath}/resources/groupware/css/common.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>${projectDetail.projectTitle}</h1>
        <p><strong>프로젝트 설명:</strong> ${projectDetail.projectDesc}</p>
        <p><strong>시작일:</strong> <fmt:formatDate value="${projectDetail.projectStartTime}" pattern="yyyy-MM-dd" /></p>
        <p><strong>종료일:</strong> <fmt:formatDate value="${projectDetail.projectEndTime}" pattern="yyyy-MM-dd" /></p>
        <p><strong>상태:</strong> ${projectDetail.projectStatus}</p>

        <h2>참여자 목록</h2>
        <table>
            <thead>
                <tr>
                    <th>사원 ID</th>
                    <th>사원 이름</th>
                </tr>
            </thead>
            <tbody>
                <c:forEach var="participant" items="${projectDetail.participants}">
                    <tr>
                        <td>${participant.empId}</td>
                        <td>${participant.empNm}</td>
                    </tr>
                </c:forEach>
            </tbody>
        </table>

        <h2>일감 목록</h2>
        <table>
            <thead>
                <tr>
                    <th>업무 번호</th>
                    <th>업무 제목</th>
                    <th>진행률</th>
                    <th>우선순위</th>
                </tr>
            </thead>
            <tbody>
                <c:forEach var="task" items="${projectDetail.tasks}">
                    <tr>
                        <td>${task.taskNo}</td>
                        <td>${task.taskTitle}</td>
                        <td>${task.progress}</td>
                        <td>${task.priority}</td>
                    </tr>
                </c:forEach>
            </tbody>
        </table>
    </div>
</body>
</html>


