@charset "UTF-8";

body {
    font-family: Arial, sans-serif;
    margin: 20px;
}
table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
}
table, th, td {
    border: 1px solid #ddd;
}
th, td {
    padding: 8px;
    text-align: left;
}
th {
    background-color: #f2f2f2;
}
.section-title {
    font-size: 18px;
    font-weight: bold;
    margin-top: 20px;
    margin-bottom: 10px;
}
/* div영역 */
div {
	padding: 0;
	margin: 0;
}
.wrap_statistics {
    margin: 0 24px;
    min-width: 940px;
}
.wrap_ehr_data {
    padding: 0 20px;
    background: #f6f9ff;
    border: 1px solid #dcdcdc;
    margin-bottom: 40px;
}
.divide_bar.divide_space {
    display: inline-block;
    margin: 0 8px;
    height: 180px;
    background: #e5e5e5;
}
.divide_bar {
    display: inline-block;
    margin: 60px 10px;
    width: 1px;
    height: 58px;
    background: #eaeaea;
    vertical-align: top;
}
.wrap_ehr_data.ehr_holiday_data .ehr_stat_data {
    width: 8%;
}
.wrap_ehr_data .ehr_stat_data {
   	margin: 40px;
    display: inline-block;
    padding: 5px 0;
    width: 15%;
    max-width: 220px;
    vertical-align: top;
}
.wrap_statistics .ehr_stat_data span.help {
    margin-top: 0;
    vertical-align: top;
}
