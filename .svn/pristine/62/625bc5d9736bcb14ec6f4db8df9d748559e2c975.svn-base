<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<html>
<head>
    <title>${survey.title} - 설문 응답</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 30px; }
        .question { margin-bottom: 20px; }
        .question-title { font-weight: bold; margin-bottom: 5px; }
    </style>
</head>
<body>

<h2>${survey.title}</h2>
<p>${survey.description}</p>

<form action="${pageContext.request.contextPath}/survey/${survey.id}/submit" method="post">
    <c:forEach var="q" items="${survey.questions}">
        <div class="question">
            <div class="question-title">${q.heading}</div>

            <c:choose>
                <c:when test="${q.family eq 'open_ended'}">
                    <textarea name="q_${q.id}" rows="3" cols="50"></textarea>
                </c:when>
                <c:when test="${q.family eq 'multiple_choice'}">
                    <c:forEach var="opt" items="${q.choices}">
                        <label>
                            <input type="checkbox" name="q_${q.id}" value="${opt}" />
                            ${opt}
                        </label><br/>
                    </c:forEach>
                </c:when>
                <c:otherwise>
                    <c:forEach var="opt" items="${q.choices}">
                        <label>
                            <input type="radio" name="q_${q.id}" value="${opt}" />
                            ${opt}
                        </label><br/>
                    </c:forEach>
                </c:otherwise>
            </c:choose>
        </div>
    </c:forEach>

    <button type="submit">설문 완료하기</button>
</form>

</body>
</html>
