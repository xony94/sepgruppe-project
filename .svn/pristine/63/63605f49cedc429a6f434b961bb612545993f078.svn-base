@charset "UTF-8";

.calendar-widget {
  padding: 15px;
  border-radius: 10px;
  background-color: white;
  box-shadow: 0 0 10px rgba(0,0,0,0.05);
}

.calendar-header {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 10px;
  margin-bottom: 10px;
}

.calendar-title {
  font-weight: bold;
  font-size: 18px;
}

.nav-btn {
  background: none;
  border: none;
  font-size: 20px;
  cursor: pointer;
}

.calendar-days {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  text-align: center;
  gap: 5px;
}

.day-label {
  font-weight: bold;
}

#calendarGrid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 5px;
}

.calendar-cell {
  position: relative;
  min-height: 60px;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.calendar-cell.sunday {
  color: red;
}

.calendar-cell.saturday {
  color: blue;
}

.calendar-cell.dimmed {
  background-color: #f8f9fa;
  color: #ccc;
}

.date-num {
  font-weight: bold;
  font-size: 14px;
  color: #333;
  text-align: center;
  margin-bottom: 5px;
}

.schedule-badge {
  background-color: #17a2b8;
  color: white;
  font-size: 12px;
  padding: 2px 6px;
  border-radius: 12px;
  display: inline-block;
  margin-top: 5px;
}