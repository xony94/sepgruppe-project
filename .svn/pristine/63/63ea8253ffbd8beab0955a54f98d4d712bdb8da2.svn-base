@charset "UTF-8";

.org-wrapper {
    display: flex;
    flex-direction: row;
    height: calc(100vh - 100px); /* 헤더/푸터 제외 */
    padding: 20px;
    gap: 20px;
    box-sizing: border-box;
}

/* 왼쪽 트리 패널 */
.tree-panel {
    flex: 1;
    border: 1px solid #ddd;
    border-radius: 5px;
    padding: 20px;
    overflow-y: auto;
    min-width: 300px;
}

/* 오른쪽 상세정보 패널 */
.detail-panel {
    flex: 2.5;
    border: 1px solid #ddd;
    border-radius: 5px;
    padding: 20px;
    overflow-y: auto;
}

/* 조직 일괄등록 버튼 고정 */
.detail-panel {
    position: relative; /* 버튼 절대 위치 기준이 되는 부모 */
}

.bulk-insert-btn {
    position: absolute;
    top: 20px;
    right: 20px;
    z-index: 10;
    font-size: 13px;
    border-radius: 4px;
    text-decoration: none;
}


/* 타이틀 */
.org-title {
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 15px;
}

/* 오른쪽 부서 상세보기시 하위부서 */
.sub-dept-wrapper {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 10px;
    margin-top: 10px;
}

.sub-dept-label {
    white-space: nowrap;
    font-weight: bold;
    font-size: 15px;
}

.sub-dept-list {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    padding-left: 0;
    margin: 0;
    list-style: none;
}

.dept-badge {
    color: #8080c0;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 14px;
    border: 1px solid #8080c0;
}

/* 검색박스 */
.search-box {
    position: relative;
    margin-bottom: 20px;
}

.search-box input {
    flex: 1;
    padding: 8px 12px;
    border: 1px solid #ddd;
    border-radius: 4px;
}

.search-box button {
    padding: 8px 14px;
    background-color: #2c7be5;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

#employee-search {
    width: 100%;
    padding: 8px 40px 8px 12px; /* 오른쪽 공간 확보 */
    border: 1px solid #ddd;
    border-radius: 4px;
}

.search-icon {
    position: absolute;
    right: 12px;
    top: 50%;
    transform: translateY(-50%);
    color: #aaa;
    cursor: pointer;
    font-size: 16px;
}

/* fancytree 검색 하이라이팅 */
span.fancytree-title em.fancytree-match {
    font-style: normal;
    font-weight: bold;
    background-color: yellow;
}

/* 부서 버튼들 */
#add-dept-btn, #delete-dept-btn {
    width: 30px;
    height: 30px;
    margin-left: 4px;
    background-color: #ccc;
    border: none;
    border-radius: 10px;
    font-size: 16px;
    font-weight: bold;
    box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.2);
    cursor: pointer;
}

/* 모달 */
.custom-modal {
    display: none;
    position: fixed;
    z-index: 9999;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background-color: rgba(0,0,0,0.4);
}

.custom-modal-content {
    background-color: #fff;
    width: 400px;
    padding: 20px;
    border-radius: 8px;
    margin: 10% auto;
    position: relative;
}

.close-modal {
    position: absolute;
    top: 10px;
    right: 14px;
    font-size: 24px;
    cursor: pointer;
}

/* 폼 정렬 */
.form-group {
    display: flex;
    align-items: center;
    margin-bottom: 12px;
}

.form-group label {
    width: 100px;
    text-align: right;
    margin-right: 10px;
}

.form-group input,
.form-group select {
    flex: 1;
    padding: 6px;
}

.modal-buttons {
    display: flex;
    justify-content: space-between;
}

/* SweetAlert z-index */
.swal2-container {
    z-index: 10010 !important;
}