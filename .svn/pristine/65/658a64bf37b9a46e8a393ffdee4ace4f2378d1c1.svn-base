@charset "UTF-8";

body {
    background-color: #f8f9fa;
    font-family: 'Apple SD Gothic Neo', 'Noto Sans KR', sans-serif;
}

.container {
    max-width: 800px;
    margin-top: 50px;
    padding: 30px;
    background-color: white;
    border-radius: 16px;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08);
}

h2.text-center {
    font-size: 1.8rem;
    font-weight: 600;
    margin-bottom: 30px;
    color: #343a40;
}

.table {
    margin-top: 20px;
    border: none;
}

.table th {
    min-width: 120px; /* 최소 너비를 넉넉히 확보 */
    white-space: nowrap; /* 줄바꿈 방지 */
    background-color: #f1f3f5;
    text-align: left;
    font-weight: 500;
    color: #495057;
    border: none;
}

.table td {
    background-color: #fff;
    color: #212529;
    vertical-align: middle;
    border: none;
    line-height: 1.8;
}

.table p {
    margin: 0 0 6px 0;
    font-size: 1rem;
}

.text-center a.btn,
.text-center button {
    min-width: 120px;
    margin: 10px 6px;
    padding: 10px 16px;
    font-size: 0.95rem;
    border-radius: 10px;
    transition: 0.2s ease;
}

.text-center .btn-primary {
    background-color: #4dabf7;
    border-color: #4dabf7;
}

.text-center .btn-primary:hover {
    background-color: #339af0;
}

.text-center .btn-danger {
    background-color: #ff6b6b;
    border-color: #ff6b6b;
}

.text-center .btn-danger:hover {
    background-color: #fa5252;
}

.text-center .btn-secondary {
    background-color: #868e96;
    border-color: #868e96;
}

.text-center .btn-secondary:hover {
    background-color: #495057;
}

/* 모달 내부 버튼 */
.modal-footer .btn-danger {
    background-color: #ff6b6b;
    border-color: #ff6b6b;
}

.modal-footer .btn-danger:hover {
    background-color: #fa5252;
}

.modal-footer .btn-secondary {
    background-color: #adb5bd;
    border-color: #adb5bd;
}

.modal-footer .btn-secondary:hover {
    background-color: #868e96;
}
