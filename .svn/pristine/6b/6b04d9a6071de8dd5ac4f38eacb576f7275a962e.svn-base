<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@ taglib uri="http://www.springframework.org/security/tags" prefix="security"%>

<!-- Sidebar -->
<div class="sidebar2" data-background-color="light" style="overflow-y: auto; max-height: 100vh;">
    <div class="sidebar-wrapper scrollbar scrollbar-inner">
        <div class="sidebar-content">
            <ul class="nav nav-secondary">
                <li class="nav-section">
                    <span class="sidebar-mini-icon"><i class="fa fa-ellipsis-h"></i></span>
                    <h4 class="text-section">전자결재</h4>
                </li>

                <!-- 새 문서 작성 -->
                <li class="nav-item">
                    <div class="d-grid gap-2 col-8 mx-auto">
                        <button type="button" class="btn btn-primary btn-lg" 
                            data-bs-toggle="modal" data-bs-target="#newApprModal"
                            data-company-no="${companyNo}" id="loadAllDocFormButton">
                            새 문서 작성
                        </button>
                    </div>
                </li>

                <!-- 즐겨찾기 -->
                <li class="nav-item">
                    <a data-bs-toggle="collapse" href="#bookmark"> 
                        <i class="fas fa-star"></i>
                        <p>즐겨찾기</p> <span class="caret"></span>
                    </a>
                    <div class="collapse" id="bookmark">
                        <ul class="nav nav-collapse">
                            <li><a href="<c:url value='/${companyNo}/favorites'/>">
                                <span class="sub-item">즐겨찾기 문서</span>
                            </a></li>
                        </ul>
                    </div>
                </li>

                <!-- 결재하기 -->
                <li class="nav-item">
                    <a data-bs-toggle="collapse" href="#apprDoc"> 
                        <i class="fas fa-file-signature"></i>
                        <p>결재하기</p> <span class="caret"></span>
                    </a>
                    <div class="collapse" id="apprDoc">
                        <ul class="nav nav-collapse">
                            <li><a href="<c:url value='/${companyNo}/approval/pending'/>">
                                <span class="sub-item">결재 대기 문서</span>
                            </a></li>
                            <li><a href="<c:url value='/${companyNo}/approval/received'/>">
                                <span class="sub-item">결재 수신 문서</span>
                            </a></li>
                            <li><a href="<c:url value='/${companyNo}/approval/references'/>">
                                <span class="sub-item">참조/열람 대기 문서</span>
                            </a></li>
                            <li><a href="<c:url value='/${companyNo}/approval/upcoming'/>">
                                <span class="sub-item">결재 예정 문서</span>
                            </a></li>
                        </ul>
                    </div>
                </li>

                <!-- 개인 문서함 -->
                <li class="nav-item">
                    <a data-bs-toggle="collapse" href="#mine"> 
                        <i class="fas fa-folder"></i>
                        <p>개인 문서함</p> <span class="caret"></span>
                    </a>
                    <div class="collapse" id="mine">
                        <ul class="nav nav-collapse">
                            <li><a href="<c:url value='/${companyNo}/documents/personal'/>">
                                <span class="sub-item">내 문서함</span>
                            </a></li>
                        </ul>
                    </div>
                </li>

                <!-- 부서 문서함 -->
                <li class="nav-item">
                    <a data-bs-toggle="collapse" href="#department"> 
                        <i class="fas fa-building"></i>
                        <p>부서 문서함</p> <span class="caret"></span>
                    </a>
                    <div class="collapse" id="department">
                        <ul class="nav nav-collapse">
                            <li><a href="<c:url value='/${companyNo}/department/documents'/>">
                                <span class="sub-item">부서 문서 목록</span>
                            </a></li>
                        </ul>
                    </div>
                </li>

                <!-- 전자결재 환경설정 -->
                <li class="nav-item">
                    <a href="<c:url value='/${companyNo}/settings/approval'/>">
                        <i class="fas fa-cog"></i>
                        <p>전자결재 환경설정</p>
                    </a>
                </li>

                <!-- 전자결재 문서관리 -->
                <li class="nav-item">
                    <a data-bs-toggle="collapse" href="#system"> 
                        <i class="fas fa-archive"></i>
                        <p>전자결재 문서관리</p> <span class="caret"></span>
                    </a>
                    <div class="collapse" id="system">
                        <ul class="nav nav-collapse">
                        	<li><a href="<c:url value='/${companyNo}/approval/admin/docsetting'/>">
                                <span class="sub-item">결재 양식 관리</span>
                            </a></li>
                            <li><a href="<c:url value='/${companyNo}/documents/forms'/>">
                                <span class="sub-item">양식별 문서 조회</span>
                            </a></li>
                            <li><a href="<c:url value='/${companyNo}/documents/official'/>">
                                <span class="sub-item">전사 공문 발송함</span>
                            </a></li>
                        </ul>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>
