<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt" %>
<head>
    <meta charset="UTF-8">
    <title>${projectDetails.projectTitle} - 프로젝트 상세</title>
    <link href="${pageContext.request.contextPath}/resources/groupware/css/common.css" rel="stylesheet">
    <link href="${pageContext.request.contextPath}/resources/groupware/css/bootstrap.min.css" rel="stylesheet"> <!-- Bootstrap CSS -->
</head>
<body>
	 <div class="card-body">
        <ul class="nav nav-tabs nav-line nav-color-secondary" id="line-tab" role="tablist">
             <li class="nav-item">
		        <a class="nav-link" id="line-work-tab" href="${pageContext.request.contextPath}/${companyNo}/task" role="tab" aria-controls="pills-work" aria-selected="true">일감</a>
		    </li>
            <li class="nav-item">
                <a class="nav-link" id="line-gantt-tab" href="${pageContext.request.contextPath}/${companyNo}/ganttcharttask" role="tab" aria-controls="pills-gantt" aria-selected="true">간트차트</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="line-calendar-tab" href="${pageContext.request.contextPath}/${companyNo}/calendertask" role="tab" aria-controls="pills-calendar" aria-selected="true">캘린더</a>
            </li>
        </ul>
    </div>
    
    <div class="container mt-4">
        <!-- 프로젝트 상세 정보 -->
        <div class="row mb-4">
            <div class="col-md-8">
                <h3>${projectDetails.projectTitle}</h3>
                <p><strong>설명:</strong> ${projectDetails.projectDesc}</p>
            </div>
        </div>

        <!-- 참여자 정보 -->
        <div class="row mb-4">
            <div class="col-md-8">
                <h4>구성원</h4>
                <ul class="list-group">
                    <c:forEach var="participant" items="${projectDetails.participants}">
                        <li class="list-group-item">
                            <strong>${participant.empNm}</strong> (${participant.empId})
                        </li>
                    </c:forEach>
                </ul>
            </div>
        </div>

        <!-- 일감 목록 -->
        <div class="row">
            <div class="col-md-8">
                <h4>업무 목록</h4>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>업무 번호</th>
                            <th>업무 제목</th>
                            <th>진행률</th>
                            <th>우선순위</th>
                        </tr>
                    </thead>
                    <tbody>
                        <c:forEach var="task" items="${projectDetails.tasks}">
                            <tr>
                                <td>${task.taskNo}</td>
                                <td>${task.taskTitle}</td>
                                <td>${task.progress}</td>
                                <td>${task.priority}</td>
                            </tr>
                        </c:forEach>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>








