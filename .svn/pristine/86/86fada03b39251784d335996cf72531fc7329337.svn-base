/* 채팅방 리스트 컨테이너 */
.chat-list-container {
    max-width: 420px;
    margin: 20px auto;
    background-color: #fff;
    border-radius: 6px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    overflow: hidden;
}

/* 헤더 영역 */
.chat-list-header {
    text-align: center;
    font-size: 1.25rem;
    font-weight: bold;
    padding: 16px;
    border-bottom: 1px solid #eee;
}

/* 채팅방 목록 */
.chat-room-list {
    list-style: none;
    margin: 0;
    padding: 0;
}

/* 채팅방 아이템 */
.chat-room-row {
    display: flex;
    align-items: center;
    padding: 12px 16px;
    border-bottom: 1px solid #eee;
    cursor: pointer;
    transition: background-color 0.2s;
}

.chat-room-row:hover {
    background-color: #fafafa;
}

/* 아바타 */
.chat-room-avatar {
    width: 48px;
    height: 48px;
    margin-right: 12px;
    border-radius: 50%;
    overflow: hidden;
}

.chat-room-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

/* 채팅방 정보 */
.chat-room-info {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.chat-room-name {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 4px;
}

.chat-last-message {
    font-size: 0.9rem;
    color: #666;
}

/* 메시지 시간 */
.chat-last-time {
    margin-left: auto;
    font-size: 0.75rem;
    color: #999;
}

/* 반응형 */
@media (max-width: 767px) {
    .chat-list-container {
        margin: 0 auto;
        border-radius: 0;
        box-shadow: none;
        max-width: 100%;
    }

    .chat-room-row {
        padding: 10px 14px;
    }

    .chat-room-avatar {
        width: 40px;
        height: 40px;
        margin-right: 10px;
    }

    .chat-room-name {
        font-size: 0.95rem;
    }

    .chat-last-message {
        font-size: 0.85rem;
    }

    .chat-last-time {
        font-size: 0.75rem;
    }
}


.chat-input-wrapper {
  display: flex;
  align-items: center;
  padding: 10px;
  border-top: 1px solid #e6ecf3;
  background-color: #fff;
}

.chat-input {
  flex: 1;
  resize: none;
  border: 1px solid #ccc;
  border-radius: 20px;
  padding: 8px 12px;
  font-size: 14px;
  outline: none;
  height: 40px;
  line-height: 24px;
}

.send-btn {
  background-color: #007bff;
  color: white;
  border: none;
  margin-left: 8px;
  padding: 8px 12px;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  font-size: 16px;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
  transition: background-color 0.2s;
}

.send-btn:hover {
  background-color: #0056b3;
}

