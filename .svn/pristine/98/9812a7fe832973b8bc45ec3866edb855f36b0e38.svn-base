@charset "UTF-8";

body {
	background-color: #f8f9fa;
}

#calendar {
	margin: 20px 0;
}

.table {
	margin-top: 20px;
}

.available-slot {
	background-color: #f0f0f0; /* 비어 있는 슬롯 색상 */
	cursor: pointer; /* 클릭 가능함을 나타내는 커서 */
}

.time-slot {
	background-color: #007bff; /* 예약된 슬롯 색상 */
	color: white; /* 예약된 슬롯 텍스트 색상 */
}

.container {
	max-width: 1200px;
	margin: 0 auto;
}

h2, h4 {
	text-align: center;
}

.table th, .table td {
	text-align: center;
}

.time-slot {
	background-color: white;
	min-height: 50px;
	text-align: center;
	vertical-align: middle;
}

.reserved {
	background-color: #007bff;
	color: white;
	padding: 5px;
	border-radius: 5px;
}

.reserved a {
	color: white !important;
	text-decoration: none;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
/* 수정된 부분: 회의실 정보 스타일 */
.room-info {
	text-align: left;
	padding: 5px 10px;
	font-size: 14px;
}

.room-info .room-name {
	font-weight: bold;
	color: #343a40;
}

.room-info .room-details {
	font-size: 12px;
	color: #666;
	margin-top: 4px;
}

.room-info .room-details span {
	display: block;
	margin-top: 2px;
}