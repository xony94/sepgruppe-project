<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>

<div class="mail-container">
    <!-- 왼쪽 메뉴 -->
    <div class="mailSidebar">
        <h3>📬 메일함</h3>
        <button class="btn btn-primary">메일 쓰기</button>
        <a href="<c:url value='/${companyNo}/mail'/>" class="menu-item">즐겨찾기</a>
        <a href="<c:url value='/${companyNo}/mail'/>" class="menu-item">받은 메일함</a>
        <a href="<c:url value='/${companyNo}/mail/mySentMail'/>" class="menu-item">보낸 메일함</a>
        <a href="#" class="menu-item">휴지통</a>
    </div>
    <!-- 오른쪽 메일 리스트 -->
    <div class="content-area">
		<c:if test="${empty mailList}">
		    <div class="no-mail">📭 받은 메일이 없습니다.</div>
		</c:if>
		
		<c:if test="${not empty mailList}">
		    <table class="table table-head-bg-primary mt-4">
		        <thead>
		            <tr>
		                <th scope="col">선택</th>
		                <th scope="col">즐찾</th>
                        <th scope="col">발신자</th>
                        <th scope="col">제목</th>
                        <th scope="col">받은 날짜</th>
		            </tr>
		        </thead>
		        <tbody>
		            <c:forEach var="mail" items="${mailList}">
		                <tr>
		                	<td><input type="checkbox" name="deleteMail"></td>
		                	<td><i class="fa-regular fa-star"></i></td>
		                    <td class="mail-from">${mail.fromEmail}</td>
		                    <td class="mail-subject"><a href="<c:url value='/${companyNo}/mail/mailContent/${mail.mailId}'/>">${mail.mailSubject}</td>
		                    <td class="mail-date">${mail.mailDate}</td>
		                </tr>
		            </c:forEach>
		        </tbody>
		    </table>
		</c:if>
	</div>	
</div>