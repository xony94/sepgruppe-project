@charset "UTF-8";

/* 전체 레이아웃 */
body {
    background-color: #f8f9fa;
    padding-top: 2rem;
    padding-bottom: 2rem;
    font-family: 'Noto Sans KR', sans-serif;
}

.meetingroom-wrapper {
  width: 100%;
  max-width: 960px; /* 🟦 적당한 너비 제한 */
  margin: 0 auto;
  padding: 2rem;
  background-color: #fff;
  border-radius: 1rem;
  box-shadow: 0 0.25rem 1rem rgba(0, 0, 0, 0.05);
}


/* 제목 스타일 */
h2 {
    font-weight: 700;
    margin-bottom: 2rem;
    color: #343a40;
    text-align: center;
}

/* 테이블 */
.table {
    background-color: white;
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: 0 0.125rem 0.5rem rgba(0, 0, 0, 0.075);
}

.table thead {
    background-color: #007bff;
    color: white;
}

.table th,
.table td {
    vertical-align: middle;
    text-align: center;
}

.table td a {
    color: #007bff;
    font-weight: 500;
    text-decoration: none;
}

.table td a:hover {
    text-decoration: underline;
}

/* 버튼 */
.btn-primary, .btn-secondary {
    background-color: #007bff;
    border-color: #007bff;
    font-weight: 600;
    padding: 0.6rem 1.5rem;
    border-radius: 0.5rem;
    transition: 0.2s all ease;
}

.btn-primary:hover, .btn-secondary:hover {
    background-color: #0056b3;
    border-color: #0056b3;
}

/* 모달 */
.modal-content {
    border-radius: 0.75rem;
    box-shadow: 0 0.25rem 1rem rgba(0, 0, 0, 0.1);
}

.modal-header {
    background-color: #f1f3f5;
    border-bottom: none;
}

.modal-title {
    font-weight: 600;
    color: #343a40;
}

.modal-footer {
    border-top: none;
}

/* form 스타일 */
.form-group label {
    font-weight: 500;
    color: #495057;
}

.form-control {
    border-radius: 0.5rem;
}
