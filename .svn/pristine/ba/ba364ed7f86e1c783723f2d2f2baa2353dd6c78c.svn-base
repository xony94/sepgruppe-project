$(document).ready(function () {
    const date = $("#reservationDate").val();
    const time = "${time}";

    if (date && time) {
        const start = new Date(`${date}T${time}`);
        const end = new Date(start.getTime() + 60 * 60 * 1000); // 1시간 후

        const format = (d) => d.toISOString().slice(0, 16); // datetime-local 형식
        $("#reservationStartTime").val(format(start));
        $("#reservationEndTime").val(format(end));
    }
});