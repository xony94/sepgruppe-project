<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<!DOCTYPE html>
<h4>결재양식설정</h4>
<span>결재 양식 선택</span>
<div class="input-group">
    <input type="text" id="searchDoc" class="form-control" placeholder="양식 제목을 입력하세요.">
    <button type="submit" class="btn btn-outline-primary">🔍</button>
</div>
<button class="btn btn-outline-primary">등록</button> 
<button class="btn btn-outline-danger">수정/삭제</button>
<table class="table">
	<thead>
		<tr>
			<th>폴더명</th>
			<th>양식 이름</th>
			<th>양식 설명</th>
		</tr>
	</thead>
	<tbody class="table-group-divider">
		<c:forEach var="docForm" items="${docForms }">
			<tr id="${docForm.docFrmNo }" class="docRow">
				<td>${docForm.docFolderVo.docFolderName }</td>
				<td>${docForm.docFrmName }</td>
				<td>${docForm.docFrmContent }</td>
			</tr>
		</c:forEach>
	</tbody>
</table>

<!-- 모달 -->
<div class="modal fade" id="ApprModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="newApprLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="newApprLabel">${docForm.docFrmName }</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
		<!-- ajax 응답 -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Understood</button>
      </div>
    </div>
  </div>
</div>

<script src="${pageContext.request.contextPath }/resources/groupware/js/approval/apprDocSetting.js"></script>