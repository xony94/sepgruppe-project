@charset "UTF-8";

.community-wrapper {
    display: flex;
    height: 100%;
    justify-content: space-between;
    align-items: flex-start;
}

.community-left {
    width: 250px;
    min-height: 100vh;
    padding: 20px;
    border-right: 1px solid #ddd;
    overflow-y: auto;
}

.community-right {
    flex-grow: 1;
    padding: 20px;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    background-color: #fff;
    overflow-y: auto;
}

.community-item {
    font-weight: 700;
    cursor: pointer;
    padding: 8px;
    border-radius: 5px;
    font-weight: normal;
}

.community-item:hover {
    background-color: #e8f0ff;
}

.card {
    border: none;
    box-shadow: none;
    background: none;
    padding: 0;
}

.card-body {
    padding: 0;
}

.btn-create {
    margin-bottom: 20px;
}

.community-left .d-flex {
    margin-bottom: 10px;
}

.community-title {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 15px;
}

.nav-tabs .nav-link {
    border: none;
}

.nav-tabs {
    --bs-nav-tabs-border-width: 0;
    --bs-nav-tabs-border-color: transparent;
    border-bottom: none;
}

.nav-tabs .nav-link.active {
    border-bottom: 2px solid #007bff;
    color: #007bff;
}

.nav-tabs .nav-link:hover {
    border-bottom: 2px solid #0056b3;
}

.tab-pane {
    display: none;
    margin-top: 0;
    padding-top: 0;
    padding-bottom: 0;
}

.tab-pane.show {
    display: block;
}

.community-list {
    display: none;
    list-style-type: none;
    padding-left: 0;
}

ul.list-unstyled {
    padding: 0;
}

li.d-flex {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

i.toggle-communities {
    cursor: pointer;
    font-size: 1.2rem;
}

.btn-outline-primary {
    border-color: #7490b2;
    color: #7490b2;
    width: 100%;
    margin-bottom: 35px;
}

.btn-outline-primary:hover {
    background-color: #7490b2;
    border-color: #7490b2;
    color: white;
}

.community-header {
    display: flex;
    align-items: center;
    margin-bottom: 30px;
}

.community-header i {
    font-size: 1.5rem;
/*     margin-right: 10px; */
}

#communityName {
    font-size: 1.25rem;
    font-weight: bold;
    flex-grow: 1;
}
#addBoard{
	margin-bottom: 30px;
}

#invite-btn {
    background-color: transparent;
    border: 1px solid #007bff; /* blue color for outline */
    color: #007bff;
    width: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 10px;
    font-size: 16px;
    border-radius: 5px;
    transition: all 0.3s ease;
    margin-right: 5px;
}

#invite-btn:hover {
    background-color: #007bff;
    color: white;
    border-color: #007bff;
}

#leave-btn {
    background-color: transparent;
    border: 1px solid #dc3545; /* red color for outline */
    color: #dc3545;
    width: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 10px;
    font-size: 16px;
    border-radius: 5px;
    transition: all 0.3s ease;
}

#leave-btn:hover {
    background-color: #dc3545;
    color: white;
    border-color: #dc3545;
}
#button-container {
    display: flex; /* 버튼들을 가로로 배치 */
    justify-content: space-between; /* 버튼 사이에 간격을 두기 */
}