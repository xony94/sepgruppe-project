<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<div class="container">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<h4 class="card-title">전사멤버 통합관리</h4>
			</div>
			<div class="card-body">
				<div class="table-responsive">
					<table id="multi-filter-select"
						class="display table table-striped table-hover">
						<c:set var="pageData" value="${pageData}" />
						<thead>
							<tr>
								<th>사번</th>
								<th>이름</th>
								<th>부서</th>
								<th>직책</th>
								<th>이메일</th>
							</tr>
						</thead>
						<tbody>
							<c:forEach var="employee" items="${pageData.detailCondition}">
								<tr>
									<td>${employee.empNo}</td>
									<td>${employee.empNm}</td>
									<td>${employee.deptName}</td>
									<td>${employee.positionName}</td>
									<td>${employee.empEmail}</td>
								</tr>
							</c:forEach>
						</tbody>
						<tfoot>
							<div>${paginationHtml}</div>
						</tfoot>
					</table>
					<form id="search-form">
						<input type="hidden" name="page"/>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
<script src="${pageContext.request.contextPath }/resources/groupware/js/employee/employeeList.js"></script>
<script src="${pageContext.request.contextPath }/resources/groupware/js/common/paging.js"></script>