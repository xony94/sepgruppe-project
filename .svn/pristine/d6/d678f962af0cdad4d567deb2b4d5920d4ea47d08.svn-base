<!--
 * == 개정이력(Modification Information) ==
 *
 *   수정일               수정자           수정내용
 *  ============      ============== =======================
 *  2025. 3. 14.        JYS            회의실 예약 전체 조회 페이지 생성
 *
-->
<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/functions" prefix="fn" %>
<%@ taglib uri="http://www.springframework.org/security/tags" prefix="security" %>
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>예약 현황</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        h2, h4 {
            text-align: center;
        }
        .table th, .table td {
            text-align: center;
        }
        .time-slot {
            background-color: #e9ecef;
            height: 50px;
        }
        .reserved {
            background-color: #007bff;
            color: white;
            padding: 5px;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>회의실 예약 현황</h2>
       <h4>
		    <a href="javascript:void(0);" onclick="changeDate(-1)">이전</a> 
		    ${currentDate} 
		    <a href="javascript:void(0);" onclick="changeDate(1)">다음</a>
		</h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>회의실</th>
                    <th>09:00</th>
                    <th>10:00</th>
                    <th>11:00</th>
                    <th>12:00</th>
                    <th>13:00</th>
                    <th>14:00</th>
                    <th>15:00</th>
                    <th>16:00</th>
                    <th>17:00</th>
                </tr>
            </thead>
            <tbody>
               <c:forEach var="room" items="${allRooms}">
				    <tr>
				        <td>${room.roomNm}</td>
				        <c:forEach var="hour" begin="9" end="17">
				            <td class="time-slot">
				                <c:set var="timeKey" value="${hour}:00" />
				                <c:choose>
				                    <c:when test="${not empty(schedule[room.roomNo][timeKey])}">
				                        <div class="reserved">
				                            ${schedule[room.roomNo][timeKey].empNm}<br /> <!-- 예약자 이름 추가 -->
				                            ${fn:substring(schedule[room.roomNo][timeKey].reservationStartTime.toString(), 0, 16)} ~ 
				                            ${fn:substring(schedule[room.roomNo][timeKey].reservationEndTime.toString(), 0, 16)}
				                        </div>
				                    </c:when>
				                    <c:otherwise>
				                        <div>예약 없음</div>
				                    </c:otherwise>
				                </c:choose>
				            </td>
				        </c:forEach>
				    </tr>
				</c:forEach>
            </tbody>
        </table>

        <h2>내 예약 현황</h2>
        <c:choose>
            <c:when test="${not empty myReservations}">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>회의실</th>
                            <th>예약 날짜</th>
                            <th>시작 시간</th>
                            <th>종료 시간</th>
                            <th>내용</th>
                            <th>취소</th>
                        </tr>
                    </thead>
                    <tbody>
                        <c:forEach var="reservation" items="${myReservations}">
                            <tr>
                                <td>
                                    <a href="${pageContext.request.contextPath}/${companyNo}/reservation/${reservation.reservationNo}">
                                        ${reservation.roomName}
                                    </a>
                                </td>
                                <td><fmt:formatDate value="${reservation.reservationDate}" pattern="yyyy-MM-dd"/></td>
                                <td><fmt:formatDate value="${reservation.reservationStartTime}" pattern="HH:mm"/></td>
                                <td><fmt:formatDate value="${reservation.reservationEndTime}" pattern="HH:mm"/></td>
                                <td>${reservation.reservationContent}</td>
                                <td>
                                    <button class="btn btn-danger btn-sm" data-toggle="modal" data-target="#cancelModal${reservation.reservationNo}">취소</button>

                                    <!-- 취소 확인 모달 -->
                                    <div class="modal fade" id="cancelModal${reservation.reservationNo}" tabindex="-1" role="dialog" aria-labelledby="cancelModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="cancelModalLabel">예약 취소 확인</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    예약을 취소하시겠습니까?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">취소</button>
                                                    <form action="${pageContext.request.contextPath}/${companyNo}/reservation/${reservation.reservationNo}/delete" method="post" style="display:inline;">
                                                        <input type="hidden" name="_method" value="delete"/>
                                                        <button type="submit" class="btn btn-danger">확인</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </c:forEach>
                    </tbody>
                </table>
            </c:when>
            <c:otherwise>
                <p>예약 내역이 없습니다.</p>
            </c:otherwise>
        </c:choose>
    </div>
	
    <!-- Bootstrap JS, jQuery -->
     <script>
	    function changeDate(offset) {
	        const currentDate = new Date("${currentDate}");
	        currentDate.setDate(currentDate.getDate() + offset); // 날짜를 변경
	        const formattedDate = currentDate.toISOString().split('T')[0]; // YYYY-MM-DD 형식으로 변환
	        window.location.href = "${pageContext.request.contextPath}/${companyNo}/reservation?date=" + formattedDate;
	    }
	</script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>






















