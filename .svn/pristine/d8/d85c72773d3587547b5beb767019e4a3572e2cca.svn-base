<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>


    <h4>회의실 예약 - 전체 조회</h4>
    <a href="${companyNo}/reservation/new">예약 추가</a> <!-- companyNo를 사용 -->
    <table border="1">
        <thead>
            <tr>
                <th>예약 번호</th>
                <th>회의실 번호</th>
                <th>사원 ID</th>
                <th>예약일</th>
                <th>시작 시간</th>
                <th>종료 시간</th>
                <th>상태</th>
                <th>작업</th>
            </tr>
        </thead>
        <tbody>
            <c:forEach var="reservation" items="${reservations}">
                <tr>
                    <td>${reservation.reservationNo}</td>
                    <td>${reservation.roomNo}</td>
                    <td>${reservation.empId}</td>
                    <td>${reservation.reservationDate}</td>
                    <td>${reservation.reservationStartTime}</td>
                    <td>${reservation.reservationEndTime}</td>
                    <td>${reservation.reservationStatus}</td>
                    <td>
                        <a href="${companyNo}/reservation/${reservation.reservationNo}">상세</a>
                        <a href="${companyNo}/reservation/${reservation.reservationNo}/edit">수정</a>
                        <form action="${companyNo}/reservation/${reservation.reservationNo}/delete" method="post" style="display:inline;">
                            <input type="submit" value="삭제" />
                        </form>
                    </td>
                </tr>
            </c:forEach>
        </tbody>
    </table>
    </section>


