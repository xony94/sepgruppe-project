@charset "UTF-8";
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* 공통 스타일 */
.biggestContainer {
    display: flex;
    flex-direction: column; /* 세로 정렬 */
}

.fc-daygrid-day:hover {
    background-color: #f0f8ff; /* 연한 파란색 배경 */
    cursor: pointer;
}

#calendar {
    background: white;
    color: #333;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.fc-event {
    background-color: #007bff !important;
    color: white;
    border-radius: 5px;
}

/* 간트 차트에만 적용되는 스타일 */
#gantt {
    width: 100%;
    height: 600px;
    border: 1px solid #ddd; /* 간트 차트 테두리 */
    border-radius: 10px;
    overflow: hidden;
    background-color: #f9f9f9; /* 간트 차트 배경색 */
}

/* Redmine Gantt 바 스타일 */
.gantt .bar {
    fill: #007bff; /* 막대 채우기 색상 */
    stroke: #0056b3; /* 막대 테두리 색상 */
}

/* Redmine Gantt 텍스트 스타일 */
.gantt .bar-label {
    font-family: 'Arial', sans-serif;
    font-size: 12px;
    fill: #333; /* 텍스트 색상 */
}

/* Redmine Gantt 팝업 스타일 */
.popup {
    background: white;
    border: 1px solid #ddd;
    border-radius: 5px;
    padding: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}
.popup h5 {
    margin: 0 0 5px;
    font-size: 16px;
    color: #007bff;
}
.popup p {
    margin: 0;
    font-size: 14px;
    color: #333;
}