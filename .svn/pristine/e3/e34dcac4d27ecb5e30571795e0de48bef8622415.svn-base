<!--
 * == 개정이력(Modification Information) ==
 *
 *   수정일      			수정자           수정내용
 *  ============   	============== =======================
 *  2025. 3. 14.     	JYS            회의실 예약 전체 조회 페이지 생성
 *
-->
<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt" %>
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>회의실 예약 현황</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            max-width: 1000px;
            margin: 0 auto;
        }
        h2 {
            margin-top: 20px;
            margin-bottom: 20px;
            text-align: center;
        }
        .schedule-table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: center;
        }
        .reserved {
            background-color: #007bff;
            color: white;
        }
        .empty {
            background-color: #ffffff;
        }
        .date-navigation {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 20px;
        }
        .date-navigation a {
            margin: 0 10px;
            font-size: 18px;
            text-decoration: none;
            color: #007bff;
        }
        .date-navigation a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>회의실 예약 현황</h2>

        <!-- 날짜 내비게이션 -->
        <div class="date-navigation">
		    <a href="<c:url value='/${companyNo}/reservation/reservations/${prevDate}/grouped'/>">&lt; 이전날</a>
		    	<h4>${currentDate}</h4>
		    <a href="<c:url value='/${companyNo}/reservation/reservations/${nextDate}/grouped'/>">다음날 &gt;</a>
		</div>

        <!-- 예약 현황 테이블 -->
        <table class="table table-bordered schedule-table">
            <thead>
                <tr>
                    <th>회의실</th>
                    <th>09:00</th>
                    <th>10:00</th>
                    <th>11:00</th>
                    <th>12:00</th>
                    <th>13:00</th>
                    <th>14:00</th>
                    <th>15:00</th>
                    <th>16:00</th>
                    <th>17:00</th>
                    <th>18:00</th>
                    <th>19:00</th>
                    <th>20:00</th>
                    <th>21:00</th>
                </tr>
            </thead>
            <tbody>
                <c:forEach var="entry" items="${schedule}">
                    <tr>
                        <td>${entry.key}</td>
                        <c:forEach var="time" begin="9" end="21">
                            <td>
                                <c:set var="timeKey" value="${time}:00" />
                                <c:choose>
                                    <c:when test="${entry.value[timeKey] != null}">
                                        <span class="reserved">${entry.value[timeKey]}</span>
                                    </c:when>
                                    <c:otherwise>
                                        <span class="empty"> </span>
                                    </c:otherwise>
                                </c:choose>
                            </td>
                        </c:forEach>
                    </tr>
                </c:forEach>
            </tbody>
        </table>

        <div class="text-center">
            <a href="javascript:history.back()" class="btn btn-secondary">뒤로 가기</a>
        </div>
    </div>
</body>
</html>















