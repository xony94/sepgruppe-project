	templateClone();
	localStorage.setItem("ckeditor_content", finalHtml);

	previewWindow = window.open(`${path}/content`, "_blank", "width=800,height=600");

	previewWindow.addEventListener("beforeunload", () => {
		localStorage.removeItem("ckeditor_content");
		previewWindow = null;
	});
}

