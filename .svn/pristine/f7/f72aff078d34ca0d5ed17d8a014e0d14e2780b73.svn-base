@charset "UTF-8";

    .notice-container {
        width: 100%;
        max-width: 1200px; /* 너무 넓어지지 않게 제한 */
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 10px;
        background: #fff;
    }
    .notice-title {
        font-size: 24px;
        font-weight: bold;
        border-bottom: 2px solid #ddd;
        padding-bottom: 10px;
        margin-bottom: 15px;
    }
    .notice-info {
        font-size: 14px;
        color: #666;
        display: flex;
        justify-content: space-between;
        padding-bottom: 10px;
        border-bottom: 1px dashed #ddd;
        margin-bottom: 15px;
    }
    .notice-content {
        font-size: 16px;
        line-height: 1.8;
        padding: 20px;
        background: #f8f9fa;
        border-radius: 5px;
        min-height: 250px;
        word-break: break-word; /* 긴 단어도 자동 줄바꿈 */
    }
    .button-group {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        margin-top: 20px;
    }
