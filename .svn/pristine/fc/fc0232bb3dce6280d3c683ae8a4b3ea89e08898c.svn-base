document.querySelector("#loadDocumentsButton").addEventListener("click", function(e) {
    loadAllDocForm(e);
});


// 결재 양식 전체 조회
function loadAllDocForm(e){
	var button = e.target; // 클릭된 버튼 참조
	const basePath = window.location.pathname.split("/").slice(0, -1).join("/");
	
	$.ajax({
		url: basePath + '/approval/allDocuments',
        method: 'GET',
		dataType: 'json',  
        success: function(resp) {
            var templateTree = $("#templateTree");
            templateTree.empty();  // 기존 리스트 비우기
			
			if (resp.length > 0) {
                resp.forEach(doc => {
                    templateTree.append('<li class="list-group-item">' + doc + '</li>');
                });
            } else {
                templateTree.append('<li class="list-group-item">결과 없음</li>');
            }
		},
		error: function(xhr, status, error) {
	        console.error("AJAX Error:", status, error);
	        alert("AJAX 요청 실패: " + status + ", " + error);
	    }
	});
}